{% extends 'base.html.twig' %}

{% block title %}Accueil - Application{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-light p-5 rounded">
                <h1 class="display-4">Bienvenue sur l'Application</h1>
                
                {% if app.user %}
                    <p class="lead">
                        Bonjour {{ app.user.employe.prenom }} {{ app.user.employe.nom }} !
                    </p>
                    
                    <hr class="my-4">
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Mon profil</h5>
                                    <p class="card-text">
                                        <strong>Email:</strong> {{ app.user.employe.email }}<br>
                                        <strong>Site:</strong> {{ app.user.employe.site.villeSite ?? 'Non assigné' }}<br>
                                        <strong>Rôle:</strong> 
                                        {% if 'ROLE_RESPONSABLE' in app.user.roles %}
                                            Responsable
                                        {% else %}
                                            Employé
                                        {% endif %}
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Mes missions</h5>
                                    <p class="card-text">Consultez et gérez vos missions en cours</p>
                                    <a href="#" class="btn btn-primary">Voir mes missions</a>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">Mes feuilles de temps</h5>
                                    <p class="card-text">Saisissez et suivez vos feuilles de temps</p>
                                    <a href="#" class="btn btn-primary">Voir mes feuilles</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p class="lead">
                        Veuillez vous connecter pour accéder à l'application.
                    </p>
                    <hr class="my-4">
                    <p>
                        <a href="{{ path('app_login') }}" class="btn btn-primary btn-lg">Se connecter</a>
                        <a href="{{ path('app_register') }}" class="btn btn-outline-primary btn-lg">S'inscrire</a>
                    </p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}