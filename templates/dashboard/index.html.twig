{# templates/dashboard/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Application{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-light p-5 rounded">
                <h1 class="display-4">Bienvenue sur votre espace personnel</h1>
                
                <p class="lead">
                    Bonjour {{ app.user.employe.prenomEmploye }} {{ app.user.employe.nomEmploye }} !
                </p>
                
                <hr class="my-4">
                
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-user-circle me-2" style="color: var(--primary-color);"></i>
                                    Mon profil
                                </h5>
                                <p class="card-text">
                                    <strong>Email:</strong> {{ app.user.employe.emailEmploye }}<br>
                                    <strong>Site:</strong> 
                                    {% if app.user.employe.site %}
                                        {{ app.user.employe.site.villeSite ?? 'Site #' ~ app.user.employe.site.id }}
                                    {% else %}
                                        Non assigné
                                    {% endif %}<br>
                                    <strong>Rôle:</strong> 
                                    {% if app.user.employe.estResponsable %}
                                        <span class="badge bg-primary">Responsable</span>
                                    {% else %}
                                        <span class="badge bg-secondary">Employé</span>
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-tasks me-2" style="color: var(--success-color);"></i>
                                    Mes missions
                                </h5>
                                <p class="card-text">Consultez et gérez vos missions en cours</p>
                                <a href="{{ path('app_mission_index') }}" class="btn btn-primary">
                                    <i class="fas fa-eye me-1"></i>Voir mes missions
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-3">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="fas fa-clock me-2" style="color: var(--warning-color);"></i>
                                    Mes feuilles de temps
                                </h5>
                                <p class="card-text">Saisissez et suivez vos feuilles de temps</p>
                                <a href="#" class="btn btn-primary">
                                    <i class="fas fa-plus-circle me-1"></i>Voir mes feuilles
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}